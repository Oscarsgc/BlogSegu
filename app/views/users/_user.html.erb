<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Eliminar", user, method: :delete,
                                  data: { confirm: "Seguro?" } %>
    | <%= link_to "Nombrar Administrador", user, method: :cambiar,
                                  data: { confirm: "Seguro?" } %>                            
  <% end %>
</li>